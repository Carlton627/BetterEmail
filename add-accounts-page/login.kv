#:kivy 1.10.0
#:import hex kivy.utils.get_color_from_hex

<LoginScreen>:
	id: login_main
	orientation: "vertical"
	space_x: self.size[0] / 3

	BoxLayout:
		size_hint_y: None
		height: 50
		canvas.before:
	        Color:
	            rgba: hex("#ffbf00")
	        Rectangle:
	            pos: self.pos
	            size: self.size

		Label:
			text: "Dynamic Header"
			bold: True

	BoxLayout:
		orientation: "vertical"
		padding: login_main.space_x, 10
		spacing: 10

		Label:
			id: sp
			size_hint_y: None
			height: 80

		BoxLayout:
			orientation: "vertical"
			spacing: 10
			size_hint_y: None
			height: 80

			TextInput: 
				id: email_field
				hint_text: "Enter Email ID"
				multiline: False
				focus: True
				on_text_validate: pass_field.focus = True

			TextInput:
				id: pass_field
				hint_text: "Enter Password"
				multiline: False
				password: True
				on_text_validate: root.validate_user()

		Button:
			background_normal: ""
			background_color: hex("#ffbf00")
			text: "Add Account"
			size_hint_y: None
			height: 40
			on_release: root.validate_user()

		BoxLayout:
			BoxLayout:
				Button:
					text: "Gmail"
			BoxLayout:
				Button:
					text: "Outlook"

		Label:
			id: info_text
			text: ""
			markup: True

	BoxLayout:
		size_hint_y: None
		height: 25
		canvas.before:
	        Color:
	            rgba: hex("#ffbf00")
	        Rectangle:
	            pos: self.pos
	            size: self.size

		Label:
			text: "Dynamic Footer"
			

