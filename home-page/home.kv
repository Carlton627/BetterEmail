#:kivy 1.10.0
#:import hex kivy.utils.get_color_from_hex

<SidebarLabel@Label>:
	size_hint_y: None
	height: 50
	color: 0, 0, 0, 1

<HomeScreen>:
	id: home_main
	orientation: "vertical"

	BoxLayout:
		size_hint_y: None
		height: 50
		canvas.before:
	        Color:
	            rgba: hex("#ffbf00")
	        Rectangle:
	            pos: self.pos
	            size: self.size

	    Label:
			text: "Dynamic Header"
			color: 0, 0, 0, 1
			bold: True


#Body starts here
	BoxLayout:
		BoxLayout:
			size_hint_x: None
